{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [      
      {"source": "/helloWorld", "function": "helloWorld"},
      {"source": "/timestamp", "function": "app"},
      {"source": "/auth", "function": "app"},
      {"source": "/api", "function": "app"},
      {"source": "/api/*", "function": "app"},
      {"source": "**", "destination": "/index.html"}      
    ]
  }
}
